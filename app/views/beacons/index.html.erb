<p id="notice"><%= notice %></p>

<h1>Beacons</h1>

<table>
  <thead>
    <tr>
      <th>Playstyle</th>
      <th>Skill</th>
      <th>Region</th>
      <th>Communication</th>
      <th>Comment</th>
      <th>Player</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.playstyle %></td>
        <td><%= beacon.skill %></td>
        <td><%= beacon.region %></td>
        <td><%= beacon.communication %></td>
        <td><%= beacon.comment %></td>
        <td><%= beacon.player_id %></td>
        <td><%= beacon.game_id %></td>
        <td><%= link_to 'Show', beacon %></td>
        <td><%= link_to 'Edit', edit_beacon_path(beacon) %></td>
        <td><%= link_to 'Destroy', beacon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

